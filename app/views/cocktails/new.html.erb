<div class="container">

  <h1>Add a cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn--primary" %>
    </div>
  <% end %>

</div>
